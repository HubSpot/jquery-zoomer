.hs-doc-sidenav

  nav

    ul.hs-public-sidenav

      li(class=(index == path ? 'current-nav-item' : ''))
        a(href=linkPrefix) Home

      each group, name in docs
        if name
          li
            b= name

        each doc in group
          li(class=(doc.fullPath == path ? 'current-nav-item' : ''))
            a(href=linkPrefix + doc.link)= doc.displayPath
